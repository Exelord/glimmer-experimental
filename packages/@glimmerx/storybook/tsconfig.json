{
    "compilerOptions": {
      // Compilation Configuration
      "target": "es2017",
      "inlineSources": true,
      "inlineSourceMap": true,
      "declaration": true,
      "declarationMap": true,

      // Environment Configuration
      "experimentalDecorators": true,
      "moduleResolution": "node",

      // Enhance Strictness
      "strict": true,
      "suppressImplicitAnyIndexErrors": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,

      "newLine": "LF",
      "noEmit": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "dist",
      "tmp",
      "node_modules",
      ".vscode"
    ]
}
